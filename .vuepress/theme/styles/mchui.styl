.demo-block {
    .meta {
        .description {
            padding: 0;
            margin: 0;
            border-radius: 0;
            padding-left: 20px;
            color: #09aeaf;
        }
    }
}

.demo-content {
    text-align: center; //布局样式
    .row {
        margin: 10px auto;
        .cont {
            color: #fff;
            height: 40px;
            line-height: 40px;
        }
        .cont-column {
            width: 400px;
        }
        .cont:nth-child(odd) {
            background: #09aeaf;
        }
        .cont:nth-child(even) {
            background: #5cb85c;
        }
    }
    .row-align {
        background: #eee;
        height: 200px;
    }
    h3 {
        background: #fff;
        text-align: center;
        padding-left: 50px;
    }
    //按钮样式
    .btns {
        .btn-mg {
            margin: 10px;
        }
    }
}

/** 表格样式**/

.page {
    table {
        width: 100%;
        /*表格宽度*/
        max-width: 65em;
        /*表格最大宽度，避免表格过宽*/
        border: 1px solid #dedede;
        /*表格外边框设置*/
        margin: 15px auto;
        /*外边距*/
        border-collapse: collapse;
        /*使用单一线条的边框*/
        empty-cells: show;
        /*单元格无内容依旧绘制边框*/
        border-left: none;
        border-right: none;
    }
    table thead,
    table tbody {
        width: 100%;
        /*表格宽度*/
        display: block;
        text-align: center;
    }
    table tr {
        width 100%;
        display: flex;
        align-items: center;
    }
    table tr td {
        border: none;
        text-align: center !important;
        /*内容居中，加上 !important 避免被 Markdown 样式覆盖*/
    }
    table tr th:nth-child(1),
    table tr td:nth-child(1) {
        width: 10%;
    }
    table tr th:nth-child(2),
    table tr td:nth-child(2) {
        width: 40%;
    }
    table tr th:nth-child(3),
    table tr td:nth-child(3) {
        width: 15%;
    }
    table tr th:nth-child(4),
    table tr td:nth-child(4) {
        width: 15%;
    }
    table tr th:nth-child(5),
    table tr td:nth-child(5) {
        width: 20%;
    }
    table th {
        font-weight: bold;
        /*加粗*/
        text-align: center !important;
        /*内容居中，加上 !important 避免被 Markdown 样式覆盖*/
        background: rgba(158, 188, 226, 0.2);
        /*背景色*/
        border: none;
    }
    table tbody tr:nth-child(2n) {
        background: rgba(158, 188, 226, 0.12);
    }
    table tbody tr:hover {
        color: $accentColor;
    }
    table th {
        white-space: nowrap;
        /*表头内容强制在一行显示*/
    }
    table td:nth-child(1) {
        white-space: nowrap;
    }
}